<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_activity"
    style="@style/SettingsActivityStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".SettingsActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="@dimen/std_margin">

        <TextView
            style="@style/SettingsTitleTextStyle"
            android:text="@string/settings" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:padding="@dimen/padding">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/yp_white"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="center_vertical"
                android:text="@string/dark_theme"
                android:textSize="@dimen/settings_text_size"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:padding="@dimen/padding">

            <TextView
                style="@style/SettingsMenuItem"
                android:text="@string/share" />

            <ImageView
                style="@style/SettingsIconStyle"
                android:src="@drawable/share" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:padding="@dimen/padding">

            <TextView
                style="@style/SettingsMenuItem"
                android:text="@string/support" />

            <ImageView
                style="@style/SettingsIconStyle"
                android:src="@drawable/support" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:padding="@dimen/padding">

            <TextView
                style="@style/SettingsMenuItem"
                android:text="@string/user_agreement" />

            <ImageView
                style="@style/SettingsIconStyle"
                android:src="@drawable/arrow_forward" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:background="@color/YP_Light_Gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <ImageView
                    style="@style/BottomMenuItemIcon"
                    android:src="@drawable/search" />

                <TextView
                    style="@style/BottomMenuItemText"
                    android:text="@string/search" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    style="@style/BottomMenuItemIcon"
                    android:src="@drawable/media_library" />

                <TextView
                    style="@style/BottomMenuItemText"
                    android:text="@string/media_library" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    style="@style/BottomMenuItemIcon"
                    android:src="@drawable/settings"
                    app:tint="@color/yp_blue" />

                <TextView
                    style="@style/BottomMenuItemText"
                    android:text="@string/settings"
                    android:textColor="@color/yp_blue" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>