<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:orientation="vertical"
    android:padding="0dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="4dp"
            android:text="@string/title"
            android:textColor="@color/yp_white"
            android:textSize="@dimen/main_text_size" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/std_margin"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/vertical_margin"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/search"
            android:textSize="@dimen/main_text_size"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_button_padding"
            app:iconTint="@color/yp_black" />

        <Button
            android:id="@+id/media_library_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/vertical_margin"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/media_library"
            android:textSize="@dimen/main_text_size"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/media_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_button_padding"
            app:iconTint="@color/yp_black" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/vertical_margin"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/settings"
            android:textSize="@dimen/main_text_size"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_button_padding"
            app:iconTint="@color/yp_black" />


    </LinearLayout>

</LinearLayout>