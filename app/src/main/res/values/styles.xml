<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_button_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BottomMenuItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HeaderLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/HeaderLinearHeight</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>