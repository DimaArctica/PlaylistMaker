<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_button_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconSize">@dimen/main_buttons_icon_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
    </style>

    <style name="SettingsMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="BottomMenuItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HeaderLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_linear_height</item>
        <item name="android:layout_margin">@dimen/header_linear_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TrackNameSearch">
        <item name="android:textSize">@dimen/search_track_name_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchArtistNameAndTrackTime">
        <item name="android:textSize">@dimen/search_artist_name_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchViewAlbumCover">
        <item name="android:layout_width">@dimen/album_cover_size</item>
        <item name="android:layout_height">@dimen/album_cover_size</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">@dimen/album_cover_margin_start</item>
    </style>

    <style name="TrackListArrowStyle">
        <item name="android:layout_height">@dimen/track_list_arrow_height</item>
        <item name="android:layout_width">@dimen/track_list_arrow_width</item>
        <item name="android:padding">@dimen/track_list_arrow_padding</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_margin">@dimen/track_list_arrow_margin</item>
    </style>

    <style name="SearchTrackInfoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_gravity">start|center</item>
    </style>

</resources>